<script>
    const days = ["Sunday", "Monday", "Tuesday", "Wednesday","Thursday", "Friday", "Saturday"];
    const months = ["Jan", "Feb", "Mar", "Apr","May", "Jun", "Jul","Aug","Sep","Oct","Nov","Dec"];
    let todayDay=document.getElementById("day");
    let todayDate=document.querySelector(".today_date");

    const daysPrint=()=>{
        let currentDate=new Date();
        let today=days[currentDate.getDay()];
        let tarik=currentDate.getDate();
        let currmonth=months[currentDate.getMonth()];
        todayDay.innerText=today;
        todayDate.innerText=`${currmonth},${tarik}`;

    }



    daysPrint();

</script>
